<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_vp_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="5dp"
        android:text="id"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/txt_pedidoId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:padding="5dp"
        android:text="pedido_id"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/background_dark" />


    <TextView
        android:id="@+id/txt_vp_itemCatalogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:padding="5dp"
        android:text="tbitemcatalogo_id"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/background_dark" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="PP"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/txt_vp_pp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="5"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="P"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/txt_vp_p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="M"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/txt_vp_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="G"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/txt_vp_g"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="GG"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/txt_vp_gg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="5dp"
                android:text="0"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/background_dark" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/txt_vp_obs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:padding="5dp"
        android:text="Obs"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/background_dark" />


</LinearLayout>